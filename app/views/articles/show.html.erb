<div class="container">
        <div class="col s12 m6">
          <div class="card blue darken-4 z-depth-3">
            <div class="card-content white-text">
              <span class="card-title">Lista de inventario</span>
              <br>
              <p>
              	<span>Código: </span>
              	<%= @article.codigo %>
              </p>
              <br>
              <p>
              	<span>Descripción del artículo: </span>
              	<%= @article.description %>
              </p>
              <br>
              <p>
              	<span>Cantidad disponible: </span>
              	<%= @article.cantidad %>
              </p>
              <br>
            </div>
            <div class="card-action">
              <a>Creado por: <%= current_user.name %></a>
            </div>
          </div>
        </div>
      </div>